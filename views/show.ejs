<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <div>
      <div class="showContainer">
      <img src="<%=products.img%>" id="showImg">
      <h5 id="showBrand"><%=products.brand%></h5>
      <h1 id="showName"><%=products.name%></h1>
      <h2 id="showPrice">$<%=products.price%></h2>
      </div>
      <div class="form-group">
        <label for="Size">Size</label><br>
        <select class="form-control col-2" id="size">
          <% if (products.category === "shirting"){ %>
          <option>S</option>
          <option>M</option>
          <option>L</option>
          <option>XL</option>
          <option>XXL</option>
        <%} else if (products.category === "footwear"){%>
          <option>8</option>
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
        <%} else if (products.category === "bottoms") {%>
          <option>28</option>
          <option>29</option>
          <option>30</option>
          <option>31</option>
          <option>32</option>
          <option>33</option>
          <option>34</option>
          <option>36</option>
      <% } else if (products.category === "bags") { %>
          <option>O/S</option>
      <%}%>
        </select>
        </div>
      <button type="button" class="btn btn-danger btn-lg">Add to Cart</button>
      <ul id="descriptionShow">
        <li class="liShow"><%=products.description.detail1%></li>
        <li class="liShow"><%=products.description.detail2%></li>
        <li class="liShow"><%=products.description.detail3%></li>
        <li class="liShow"><%=products.description.detail4%></li>
        <li class="liShow"><%=products.description.detail5%></li>
      </ul>
      <form action="/products/<%=products.id%>?_method=DELETE" method="POST">
        <input id="deleteShow" class="btn btn-outline-dark" type="submit" value="DELETE">
      </form>
      <a class="btn btn-dark" id="editShow" href="/products/<%=products.id%>/edit">Edit Product</a>
    </div>
  </div>

  <!-- ========= SCRIPT =========== -->
  <%- include('./partials/script.ejs') %>
  </body>
</html>
