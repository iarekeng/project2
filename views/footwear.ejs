<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <!-- ======== HEAD ============ -->
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <!-- ========= HEADER ========== -->
    <%- include('./partials/header.ejs') %>
    <main>
      <!-- ========= CAROUSEL ============ -->
      <%- include('./partials/carousel.ejs') %>
    <div class="grid-container">
      <% for (let i = 0; i < footwear.length; i++) { %>
        <div class="box box<%=[i]%>">
          <a  href="/products/<%=footwear[i].id%>" id="linkIndex">
        <img src="<%=footwear[i].img%>" width="300px">
        <div id="brandIndex"><%=footwear[i].brand%></div>
        <div id="nameIndex"><%=footwear[i].name%></div>
        </a>
        <div id="priceIndex">$<%=footwear[i].price%></div>
        </div>
      <%}%>
    </div>
  </main>
    <!-- ========== FOOTER =========== -->
    <%- include('./partials/footer.ejs') %>
    <!-- =========== SCRIPT TAG ========== -->
    <%- include('./partials/script.ejs') %>
  </body>
</html>
