<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <form action="/products/sell" method="POST">
      <div class="containerSell">
      <div class="form group">
        <label for="brand">Brand:</label><br>
        <input type="text" name="brand" />
      </div>
      <div class="form group">
        <label for="brand">Image:</label><br>
        <input type="text" name="img" placeholder="image" />
      </div>
      <div class="form group">
        <label for="brand">Name:</label><br>
        <input type="text" name="name" />
      </div>
      <div class="form group">
        <label for="brand">Price:</label><br>
        <input type="number" name="price" />
      </div>
      <div class="form group">
        <label for="brand">Description:</label><br>
        <input type="text" name="description.detail1">
      </div>
      <div class="form group">
        <label for="brand">Description:</label><br>
        <input type="text" name="description.detail2">
      </div>
      <div class="form group">
        <label for="brand">Description:</label><br>
        <input type="text" name="description.detail3">
      </div>
      <div class="form group">
        <label for="brand">Description:</label><br>
        <input type="text" name="description.detail4">
      </div>
      <div class="form group">
        <label for="brand">Description:</label><br>
        <input type="text" name="description.detail5">
      </div>
        <input type="submit" value="Create New Item" />
    </form>
    <div>
    </div>
      <div class="grid-container">
        <% for (let i = 0; i < products.length; i++) { %>
          <div class="box box<%=[i]%>">
            <a  href="/products/<%=products[i].id%>" id="linkIndex">
          <img src="<%=products[i].img%>" width="300px">
          <div id="brandIndex"><%=products[i].brand%></div>
          <div id="nameIndex"><%=products[i].name%></div>
          </a>
          <div id="priceIndex">$<%=products[i].price%></div>
          </div>
        <%}%>
      </div>
    </div>
      <%- include('./partials/script.ejs') %>
  </body>
</html>
