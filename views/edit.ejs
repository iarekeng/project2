<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <img id=editImg src="<%=products.img%>">
    <form action='/products/<%=products.id%>?_method=PUT' method="POST">

      <div class="form group">
        <label for="brand">Brand:</label><br>
        <input type="text" name="brand" value="<%=products.brand%>">
      </div>
      <div class="form group">
        <label for="img">Image:</label><br>
        <input type="text" name="img" value="<%=products.img%>">
      </div>
      <div class="form group">
        <label for="name">Product Name:</label><br>
        <input type="text" name="name" value="<%=products.name%>">
      </div>
      <div class="form group">
        <label for="price">Price:</label><br>
        <input type="text" name="price" value="<%=products.price%>">
      </div>
      <div class="form group">
        <label for="description1">Add Description:</label><br>
        <input type="text" name="description.detail1" value="<%=products.description.detail1%>">
      </div>
      <br>
    <input class="btn btn-secondary" type="submit" value="Edit Product">
    </form>
    <!-- script  -->
    <%- include('./partials/script.ejs') %>
  </body>
</html>
